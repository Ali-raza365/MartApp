{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "types": ["jest"],
    "baseUrl": "./src/",
    "paths": {
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@navigation/*": ["navigation/*"],
      "@state/*": ["state/*"],
      "@features/*": ["features/*"],
      "@services/*": ["services/*"],
    }
  }
}